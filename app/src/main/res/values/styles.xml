<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Incorrect Answer Font Style -->
    <style name="IncorrectTextStyle" parent="@android:style/TextAppearance.Medium">
        <!-- Customize your font here. -->
        <item name="android:textColor">#FF0000</item>
    </style>

    <!-- Question Instruction Font Style-->
    <style name="QuestionTitleStyle" parent="@android:style/TextAppearance.Medium">
        <!-- Customize your font here. -->
        <item name="android:textColor">#000000</item>
        <item name ="android:layout_width">match_parent</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AnswerStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

</resources>
